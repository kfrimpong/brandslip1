
<% @presenters.each do |users| %>
  <div class="profile panel panel-default">
      <div class="panel-body">
      <div style="width:30%;float: left;padding-left: 10px;">
        <span style="font-size: 15px; color: royalblue"></span>
        <span>
          <% if users.image? %>
            <%= image_tag users.image_url, :size =>"90x90"  %>
          <% else %>
            <%= image_tag "no_image.png", :size =>"90x90"  %>
          <% end %>
      </div>
      <div style="width: 70%;float: left">
        <table style="width: 100%">
          <tr>
            <td style="font-size: 15px; color: royalblue;width: 50%;">Company: </td>
            <td style="width: 50%"><%= users.company_name %></td>
          </tr>
          <tr>
            <td style="font-size: 15px; color: royalblue;width: 50%;">Full Name: </td>
            <td style="width: 50%"><%= users.first_name %> <%= users.last_name %></td>
          </tr>
          <tr>
            <td style="font-size: 15px; color: royalblue;width: 50%;">Interest: </td>
            <td style="width: 50%"><%= users.interest.nil? ? "--" : Jobcategorymaster.find(users.interest).category %></td>
          </tr>
          <tr>
            <td style="font-size: 15px; color: royalblue;width: 50%;vertical-align: top">Description: </td>
            <td style="width: 50%"><%= truncate(users.description, :length => 60) %></td>
          </tr>
          <tr>
            <td style="font-size: 15px; color: royalblue;width: 50%;">Target Age Demographic: </td>
            <td style="width: 50%"><%= users.sub_category.nil? ? "--" : Jobsubcategorymaster.find(users.sub_category).nil? ? "--" : Jobsubcategorymaster.find(users.sub_category).sub_category %></td>
          </tr>   
          <% if !users.youtube_channel_link.nil? && !users.youtube_channel_link.empty? %>
            <tr>
              <td style="font-size: 15px; color: royalblue;width: 50%;">Youtube: </td>
              <td style="width: 50%"><%= users.youtube_subscribers %></td>
            </tr>
          <% end %>
          <% if !users.vine_handle.nil? && !users.vine_handle.empty? %>
            <tr>
              <td style="font-size: 15px; color: royalblue;width: 50%;">Vine: </td>
              <td style="width: 50%"><%= users.vine_followers %></td>
            </tr>
          <% end %>
          <% if !users.instagram_handle.nil? && !users.instagram_handle.empty? %>
            <tr>
              <td style="font-size: 15px; color: royalblue;width: 50%;">Instagram: </td>
              <td style="width: 50%"><%= users.instagram_followers %></td>
            </tr>
          <% end %>
          <% if !users.snapchat_handle.nil? && !users.snapchat_handle.empty? %>
            <tr>
              <td style="font-size: 15px; color: royalblue;width: 50%;">Snapchat: </td>
              <td style="width: 50%"><%= users.snapchat_followers %></td>
            </tr>
          <% end %>
        </table>
      </div> 
    </div>
    <div style="padding-top: 10px;margin-left: 40%;display: inline-block">
      <a href="<%= presenters_profile_show_path(:id => users.id) %>" class="btn btn-primary btn-mini">Visit Profile</a>
    </div>
  </div>
<% end %>