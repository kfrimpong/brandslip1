<script type="text/javascript">
  $(document).ready(function() {
    $("#admin_nav li").each(function(){
      $(this).removeClass('active');
    })
    $("#li_contact_us").addClass("active");
  });
</script> 

<%= form_for(@contact_u) do |f| %>
