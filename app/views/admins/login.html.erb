<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>BrandSlip | Login Page</title>
	<meta content="width=device-width, initial-scale=1.0" name="viewport" />
	<meta content="" name="description" />
	<meta content="" name="author" />
	<link href="/assets/admin_css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
	<link href="/assets/admin_css/bootstrap-responsive.min.css" rel="stylesheet" type="text/css"/>
	<link href="/assets/admin_css/font-awesome.min.css" rel="stylesheet" type="text/css"/>
	<link href="/assets/admin_css/style-metro.css" rel="stylesheet" type="text/css"/>
	<link href="/assets/admin_css/style.css" rel="stylesheet" type="text/css"/>
	<link href="/assets/admin_css/style-responsive.css" rel="stylesheet" type="text/css"/>
	<link href="/assets/admin_css/login.css" rel="stylesheet" type="text/css"/>
	<link rel="shortcut icon" href="favicon.ico" />
</head>
<!-- END HEAD -->
<!-- BEGIN BODY -->
<body class="login">
	<!-- BEGIN LOGO -->
        <div class="logo" style="color: yellow">
		BrandSlip Admin
	</div>
        <div style="width: 247px;margin: 0 auto;color: red;padding: 15px;text-align: center;"><%= notice %></div>
	<!-- END LOGO -->
	<!-- BEGIN LOGIN -->
	<div class="content">
		<!-- BEGIN LOGIN FORM -->
		<form class="form-vertical login-form" action="<%= create_login_admin_url %>" method="post">
			<h3 class="form-title">Login your admin account</h3>
			<div class="alert alert-error hide">
				<button class="close" data-dismiss="alert"></button>
				<span>Enter any username and password.</span>
			</div>
			<div class="control-group">
				<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
				<label class="control-label visible-ie8 visible-ie9">Username</label>
				<div class="controls">
					<div class="input-icon left">
						<i class="icon-user"></i>
						<input class="m-wrap placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="admin_email"/>
					</div>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label visible-ie8 visible-ie9">Password</label>
				<div class="controls">
					<div class="input-icon left">
						<i class="icon-lock"></i>
						<input class="m-wrap placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="admin_password"/>
					</div>
				</div>
			</div>
			<div class="form-actions">
				<label class="checkbox">
				<input type="checkbox" name="remember" value="1"/> Remember me
				</label>
				<button type="submit" class="btn green pull-right">
				Login <i class="m-icon-swapright m-icon-white"></i>
				</button>            
			</div>
		</form>
		<!-- END LOGIN FORM -->        


	</div>
	<!-- END LOGIN -->
	<!-- BEGIN COPYRIGHT -->
	<div class="copyright">
		2013 &copy; BrandSlip.
	</div>
	<script src="/assets/admin/jquery-1.10.1.min.js" type="text/javascript"></script>
	<script src="/assets/admin/jquery-ui-1.10.1.custom.min.js" type="text/javascript"></script>      
	<script src="/assets/bootstrap.min.js" type="text/javascript"></script>
	<script src="/assets/admin/jquery.validate.min.js" type="text/javascript"></script>	    
	<script src="/assets/admin/app.js" type="text/javascript"></script>
	<script src="/assets/admin/login.js" type="text/javascript"></script> 
	<script>
		jQuery(document).ready(function() {     
		  App.init();
		  Login.init();
		
		 
		
		});
	</script>
	<!-- END JAVASCRIPTS -->
</body>
<!-- END BODY -->
</html>