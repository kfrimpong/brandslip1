  <div class="page-content">

    <!-- BEGIN PAGE CONTAINER-->
    <div class="container-fluid">
      <!-- BEGIN PAGE HEADER-->
      <div class="row-fluid">
        <div class="span12">

          <!-- BEGIN PAGE TITLE & BREADCRUMB-->
          <h3 class="page-title">
            Payments <small>admin dashboard</small>
          </h3>
          <ul class="breadcrumb">
            <li>
              <i class="icon-home"></i>
              <a href="<%= manage_bids_admin_path %>">Home</a> 
              <i class="icon-angle-right"></i>
            </li>
            <li><a href=""> Payments </a></li>
          </ul>
          <!-- END PAGE TITLE & BREADCRUMB-->
        </div>
        
        <div class="row-fluid">
          <div class="span12">
              <!-- BEGIN EXAMPLE TABLE PORTLET-->
              <div class="portlet box green">
                  <div class="portlet-title">
                    <div class="caption"><i class="icon-globe"></i>All Transactions</div>
                  </div>
                  <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
                        <thead>  
                          <tr>                            
                            <th>Transaction Type</th>
                            <th>Amount</th>
                            <th>Uri</th>
                            <th>Debitted</th>
                            <th>Creditted</th>
                          </tr>
                        </thead>
                      <tbody>
                        <% @transactions.each do |transaction| %>
                        <tr id="tr_<%= transaction.id %>">                          
                          <td><%= transaction.transaction_type %></td>
                          <td><%= number_with_precision(transaction.amount, :precision=>2) %></td>
                          <td><%= transaction.uri %></td>                                                    
                          <td><%= get_user_name(transaction.debitted_id) %></td>
                          <td><%= get_user_name(transaction.creditted_id) %></td>
                        </tr>
                        <% end %>
                      </tbody>                              
                    </table>
                  </div>
              </div>
              <div style="padding-left: 450px">                
                <span id="success_msg"></span> 
              </div>              
          </div>
      </div>

    </div>
    <!-- END PAGE CONTAINER-->    
  </div>