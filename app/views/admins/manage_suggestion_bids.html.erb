  <div class="page-content">    
    <!-- BEGIN PAGE CONTAINER-->
    <div class="container-fluid">
      <!-- BEGIN PAGE HEADER-->
      <div class="row-fluid">
        <div class="span12">

          <!-- BEGIN PAGE TITLE & BREADCRUMB-->
          <h3 class="page-title">
            Manage Suggestion Bids <small>admin dashboard</small>
          </h3>
          <ul class="breadcrumb">
            <li>
              <i class="icon-home"></i>
              <a href="<%= manage_suggestion_bids_admin_path %>">Home</a> 
              <i class="icon-angle-right"></i>
            </li>
            <li><a href="">Manage Suggestion Bids</a></li>
          </ul>
          <!-- END PAGE TITLE & BREADCRUMB-->
        </div>
        
        <div class="row-fluid">
          <div class="span12">
              <!-- BEGIN EXAMPLE TABLE PORTLET-->
              <div class="portlet box green">
                  <div class="portlet-title">
                          <div class="caption"><i class="icon-globe"></i>All Suggestion Proposals</div>
        
                  </div>
                  <div class="portlet-body">
                          <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
                              <thead>  
                                <tr>
                                  <th><input type="checkbox" id="select_all_users" onchange=""/></th>
                                  <th>Detail</th>
                                  <th>Cost</th>
                                  <th>Suggestion</th>
                                  <th>By User</th>
                                  <th>Created on</th>
                                </tr>
                              </thead>
                            <tbody>
                              <% @suggestion_bids.each do |bid| %>
                              <tr id="tr_<%= bid.id %>">
                                <td><label class="checkbox"><input id="brandslip_user" type="checkbox" value="<%= bid.id %>" onchange=""/></label></td>                                
                                <td>                                  
                                  <span title="<%= bid.proposal_details %>" style="width:100px;"><%= bid.proposal_details.length>49? (bid.proposal_details[0..49]+' ...'): bid.proposal_details %></span>
                                </td>
                                <td><%= bid.proposal_cost %></td>
                                <td><%= get_suggestion_title(bid.suggestion_id) %>
                                <td><%= get_user_name(bid.user_id) %></td>
                                <td><%= bid.created_at %></td>
                              </tr>
                              <% end %>
                            </tbody>                              
                          </table>
                    </div>
              </div>
              <div style="padding-left: 450px">                
                <input type="button" class="btn red" value="Cancel Selected"  onclick="delete_selected_suggestion_bids()">
                <%= image_tag("loader.gif",  :id => "ajaxloading", :style => "display:none") %>
                <span id="success_msg"></span>
              </div>              
          </div>
      </div>

    </div>
    <!-- END PAGE CONTAINER-->    
  </div>